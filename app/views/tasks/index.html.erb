<h1>Tasks#index</h1>
<p><%= link_to 'view all tasks', all_tasks_path %>&nbsp;-&nbsp;<%= link_to 'view to-do', tasks_path %></p>
<% @tasks.each do |task| %>
<form action="<%= tasks_path %>" method="post" class="task<%= task.id %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="_method" value="patch">
  <div class="form-group form-check m-0">
    <% task.completed == true ? completed = 'checked' : completed = '' %>
    <input type="checkbox" class="form-check-input" id="task<%= task.id %>" name="checkbox" <%= completed %>>
    <!-- <label class="form-check-label"><%= task.title %></label> -->
    <%= link_to task.title, task_path(task) %>
    <input type="text" value="<%= task.id %>" name="id" hidden>
  </div>
<!-- <input type="submit" value="submit"> -->
</form>
<% end %>
<p class="my-3"><%= link_to raw('<i class="fas fa-plus"></i>&nbsp;add new task'), new_task_path %></p>
